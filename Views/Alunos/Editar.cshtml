@{
  mvc.Models.Aluno aluno = ViewBag.Aluno;
}
@{
  ViewData["Title"] = "Alterar Alunos";
}
<div class="text-center">
  <h1 class="display-4">Editar Aluno</h1>
</div>
<form method="POST" action="/alunos/Editar" id="alunos" data-toggle="validator" role="form"
  onsubmit="return confirm('Confirma o Cadastro')">

  <div class="form-group">
    <label for="id" class="control-label">Id</label>
    <input id="id" name="id" class="form-control" placeholder="Digite seu nome..." type="text" value="@aluno.Id">
  </div>
  <div class="form-group">
    <label for="nome" class="control-label">Nome</label>
    <input id="nome" name="nome" class="form-control" placeholder="Digite seu nome..." type="text" value="@aluno.Nome">
  </div>

  <div class="form-group">
    <label for="matricula" class="control-label">Matrícula</label>
    <input id="matricula" name="matricula" class="form-control" placeholder="Digite sua matrícula..." type="text"
      value="@aluno.Matricula">
  </div>

  <div class="form-group">
    <label for="notas" class="control-label">Notas</label>
    <input id="notas" name="notasEditar" class="form-control" placeholder="Digite suas notas separadas por vírgula"
      type="text" value="@aluno.notasEditar">
  </div>

  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
</table>